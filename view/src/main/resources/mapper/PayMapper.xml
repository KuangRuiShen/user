<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.app.view.mapper.PayMapper">
	
	<insert id="add" parameterType="com.app.view.entry.PayMent" >
		  <trim>
			  INSERT INTO order_info (result,total_fee,trade_no,
			  <if test="body != null and body !='' ">
			  body,
			  </if>	
			  	<if test="trade_type != null and trade_type !='' ">
			  trade_type,
			  </if>	  
			  <if test="start_time != null and start_time !='' ">
			  start_time,
			  </if>	 
			  user_id) 
			  VALUES(#{result},#{total_fee},#{trade_no},
			   <if test="body != null and body !='' ">
			  #{body},
			  </if>	
			  	<if test="trade_type != null and trade_type !='' ">
			 #{trade_type},
			  </if>	  
			  <if test="start_time != null and start_time !='' ">
			 #{start_time},
			  </if>	 
			  #{user_id})  
		  </trim>
	</insert>


	<update id="update" parameterType="com.app.view.entry.PayMent">
		UPDATE order_info SET
		end_time=#{end_time},
		result=#{result},
		WHERE trade_no = #{trade_no}
	</update>
	
	
</mapper>